# Get your OMDb API key from: https://www.omdbapi.com/apikey.aspx (free!)
OMDB_API_KEY=your_omdb_api_key_here

# Get your Gemini API key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use (will fallback to gemini-1.5-flash if not available)
GEMINI_MODEL=gemini-2.0-flash-exp

# Optional: MongoDB connection string for server-side persistence
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/moviemate

# Server port (default: 3000)
PORT=3000
